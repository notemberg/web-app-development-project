<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourWebsite</title>

    <link rel="stylesheet" href="~/css/nav.css" />

    @RenderSection("Styles", required: false) <!-- สำหรับ CSS ของแต่ละหน้า -->
</head>

<body>
    <!-- ✅ Header อยู่ทุกหน้า -->
    <header class="main-header">
        <div class="logo">Logo</div>
        <input id="search-bar" type="text" placeholder="Search Your Interest">
        <nav>
            <button class="nav-btn">Noti</button>
            <button class="nav-btn">Chat</button>
            <button class="nav-btn">4C</button>
        </nav>
    </header>

    <!-- ✅ Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>

</html>
