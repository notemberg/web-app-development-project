@model MaJerGan.Models.ActivityLogIndexViewModel

@{
    ViewData["Title"] = "Activity Log";
    ViewData["ShowHeader"] = "True";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity Log</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/ActivityLog/Index.css" />
</head>

<body>

    <div class="activity-log-container">
        <div class="title">Activity Log</div>

        <!-- User Profile Section -->
        <div class="profile-content">
            <div class="profile-picture">
                <img id="profileImg" src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="Profile Picture">
                <div class="profile-info">
                    <h3>@User.Identity.Name</h3>
                    <p>ID: @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value</p>
                </div>
            </div>

            <div class="log-section">
                <!-- Hosted Events -->
                <h3>Host</h3>
                <div class="log-items">
                    @foreach (var activity in Model.HostedActivities)
                    {
                        <div class="log-item">
                            <div class="log-details">
                                <h4>@activity.EventTitle</h4>
                                <p>Hosted by: @activity.HostName</p>
                                <p>@activity.EventTime.ToString("dd/MM/yyyy hh:mm tt")</p>
                                <p>Status: @activity.Status</p>
                            </div>
                            <div class="log-status">
                                <span class="status-indicator hosted"></span>
                            </div>
                        </div>
                    }
                </div>

                <!-- Participated Events -->
                <h3>Joined Events</h3>
                <div class="log-items">
                    @foreach (var activity in Model.JoinedActivities)
                    {
                        <div class="log-item">
                            <div class="log-details">
                                <h4>@activity.EventTitle</h4>
                                <p>Host: @activity.HostName</p>
                                <p>@activity.EventTime.ToString("dd/MM/yyyy hh:mm tt")</p>
                                <p>Status: @activity.Status</p>
                            </div>
                            <div class="log-status">
                                <span class="status-indicator @(activity.Status == "Active" ? "approved" : "pending")"></span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

</html>
